@import "variables"
@import "mixins"

.faqs-chat
  position: absolute
  bottom: 10px
  right: 10px
  background-color: #333
  outline: 0
  color: #fff
  padding: 10px
  border-radius: 2px

#faqs
  z-index: 9999
  right: 10px
  bottom: 0px
  position: fixed
  border: solid 1px #ededed
  .faqs-heading
    z-index: 100
    a
      background-color: $cyan-color
      text-align: left
      color: $white !important
      border-radius: 5px 5px 0 0
      display: block
      font-family: 'Open Sans'
      font-size: 14px
      padding: 8px 10px
      padding-bottom: 7px
      margin-top: -35px
      width: 127px
      float: right
      &:hover
        text-decoration: none
      &.faqs-mobile
        display: none
      &:before
        content: '\e074'
        font-family: 'Groupon'
        float: right
        font-size: 10px
        padding: 5px 5px 0 5px

  .faqs-heading.open a:before
    content: '\e077'
    font-family: 'Groupon'

  .faqs-body
    box-shadow: -6px 2px 10px -4px $gray
    height: auto
    width: 100%
    padding: 20px
    div
      background-color: $white
      overflow-y: scroll
      padding: 0 10px 0 0
      height: 275px
      width: 318px
    dl.accordion dt
      color: $dark-gray-color
      line-height: 1.5em
      font-size: 12px
    dd
      > ul
        float: none
        li
          list-style: disc
          margin-left: 20px
          display: list-item
          &:before,
          &:after
            display: none

#cupcake #faqs
  bottom: 0

#faqs-modal
  display: none
  .modal
    position: absolute
    margin: 0

#app .faqs-subtitles
  color: lighten($dark-gray-color, 5)
  display: block
  margin-bottom: 10px
  font-size: 14px


// when you need a opacity
.pending, .location-disabled
  opacity: 0.3
